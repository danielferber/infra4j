<ivysettings>
	<settings defaultResolver="maven-central" defaultConflictManager="all" />		<!-- in order to get all revisions without any eviction -->
<!-- 	<caches defaultCacheDir="${ivy.cache.dir}/no-namespace" /> -->
	<resolvers>
		<ibiblio name="maven-central" m2compatible="true" />
		<filesystem name="infra-dependencies">
			<ivy
				pattern="${basedir}/dep/[organisation]/[module]/ivys/ivy-[revision].xml" />
			<artifact
				pattern="${basedir}/dep/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
		</filesystem>
	</resolvers>
</ivysettings>