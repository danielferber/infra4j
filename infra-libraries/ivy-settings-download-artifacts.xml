<ivysettings>
	<settings defaultResolver="maven-central-repo" defaultConflictManager="all" />		<!-- in order to get all revisions without any eviction -->
	<resolvers>
		<ibiblio name="maven-central-repo" m2compatible="true" />
		<filesystem name="infra-dependencies">
			<ivy
				pattern="${infra-libraries.dep.dir}/[organisation]/[module]/ivys/ivy-[revision].xml" />
			<artifact
				pattern="${infra-libraries.dep.dir}/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
		</filesystem>
	</resolvers>
</ivysettings>