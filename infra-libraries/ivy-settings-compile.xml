<ivysettings>
	<settings defaultResolver="build-lib-dependencies" defaultConflictManager="all" />
	<resolvers>
		<filesystem name="build-lib-dependencies">
			<ivy
				pattern="${ivy.settings.dir}/dep/[organisation]/[module]/ivys/ivy-[revision].xml" />
			<artifact
				pattern="${build.lib.pattern}" />
		</filesystem>
	</resolvers>
</ivysettings>