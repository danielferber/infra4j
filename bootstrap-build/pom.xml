<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.pro.danielferber.bootstrap</groupId>
	<artifactId>bootstrap-build</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1-SNAPSHOT</version>

	<dependencies>
		<dependency>
			<groupId>br.pro.danielferber.bootstrap</groupId>
			<artifactId>bootstrap-core</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>br.pro.danielferber.bootstrap</groupId>
			<artifactId>bootstrap-scripts</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>zip</type>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-dependency-plugin</artifactId>
										<versionRange>[1.0.0,)</versionRange>
										<goals>
											<goal>copy-dependencies</goal>
											<goal>unpack</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>display-dependency-updates</goal>
							<goal>display-plugin-updates</goal>
							<goal>display-property-updates</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>default-jar</id>
						<phase>never</phase>
						<configuration>
							<finalName>unwanted</finalName>
							<classifier>unwanted</classifier>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>analyze-duplicate</goal>
						</goals>
					</execution>
					<execution>
						<id>print-classpath</id>
						<phase>package</phase>
						<goals>
							<goal>build-classpath</goal>
						</goals>
						<configuration>
							<includeScope>runtime</includeScope>
							<excludeScope>provided</excludeScope>
							<includeTypes>jar</includeTypes>
							<excludeTransitive>false</excludeTransitive>
						</configuration>
					</execution>
					<execution>
						<id>print-scripts</id>
						<phase>package</phase>
						<goals>
							<goal>build-classpath</goal>
						</goals>
						<configuration>
							<includeScope>runtime</includeScope>
							<excludeScope>provided</excludeScope>
							<includeTypes>zip</includeTypes>
							<excludeTransitive>false</excludeTransitive>
						</configuration>
					</execution>
					<execution>
						<id>build-classpath</id>
						<phase>package</phase>
						<goals>
							<goal>build-classpath</goal>
						</goals>
						<configuration>
							<outputFilterFile>true</outputFilterFile>
							<outputFile>${bootstrapbuild.classpathProperties}</outputFile>
							<prefix>jar</prefix>
							<fileSeparator>/</fileSeparator>
							<outputAbsoluteArtifactFilename>false</outputAbsoluteArtifactFilename>
							<includeScope>runtime</includeScope>
							<excludeScope>provided</excludeScope>
							<excludeTransitive>false</excludeTransitive>
							<includeTypes>jar</includeTypes>
						</configuration>
					</execution>
					<execution>
						<id>copy-bootstrap-scripts</id>
						<phase>package</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${bootstrapbuild.directory}</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<includeScope>runtime</includeScope>
							<excludeScope>provided</excludeScope>
							<excludeTransitive>false</excludeTransitive>
							<includeTypes>zip</includeTypes>
						</configuration>
					</execution>
					<execution>
						<id>copy-bootstrap-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${bootstrapbuild.directory}/jar</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<includeScope>runtime</includeScope>
							<excludeScope>provided</excludeScope>
							<excludeTransitive>false</excludeTransitive>
							<includeTypes>jar</includeTypes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<dependencies>
					<dependency>
						<groupId>br.pro.danielferber.bootstrap</groupId>
						<artifactId>bootstrap-assemblies-plugin</artifactId>
						<version>0.0.1-SNAPSHOT</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>make-assembly</id> <!-- this is used for inheritance merges -->
						<phase>package</phase> <!-- bind to the packaging phase -->
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<filters>
						<filter>${bootstrapbuild.classpathProperties}</filter>
					</filters>
					<archiveBaseDirectory>${project.build.directory}/unpacked</archiveBaseDirectory>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptorRefs>
						<descriptorRef>assembly-unpacked</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<bootstrapbuild.directory>${project.build.directory}/unpacked</bootstrapbuild.directory>
		<bootstrapbuild.classpathFile>${project.build.directory}/classpath.txt</bootstrapbuild.classpathFile>
		<bootstrapbuild.classpathProperties>${project.build.directory}/classpath.properties</bootstrapbuild.classpathProperties>
		<bootstrap.identificador>bootstrap-build</bootstrap.identificador>
		<bootstrap.descricao>descricao bootstrap-build</bootstrap.descricao>
	</properties>
    <name>Bootstrap - Build reference POM</name>
    <description>Script maven que realiza a constru��o de uma aplica��o J2SE para um servi�o Windows.
A constru��o � baseada na implementa��o java do m�dulo bootstrap-core e nos scripts do m�dulo bootstrap-scripts.</description>
</project>